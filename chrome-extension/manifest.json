{
  "manifest_version": 3,
  "name": "ChatGPT Message Navigator",
  "version": "1.0.0",
  "description": "Navigate and view user messages on chatgpt.com and gemini.google.com with a modern, user-friendly UI.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://chatgpt.com/*", "<all_urls>"],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png"
    }
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "96": "favicon-96x96.png",
    "192": "favicon-192x192.png",
    "512": "favicon-512x512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
